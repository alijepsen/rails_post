<%= form_for @post do |f| %>
  <%= f.label :author %><!--equiv to <label>Author</label> -->
  <%= f.text_field :author %>
  <br /><br />

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br /><br />

  <%= f.label :body %>
  <%= f.text_area :body %>
  <br /><br />

  <%= f.label :public %>
  <%= f.check_box :public %>
  <br /><br />

  <%= f.submit %>
<% end %>
